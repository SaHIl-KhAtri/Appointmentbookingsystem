@model AppointmentApp.Models.Appointment

@{
    ViewBag.Title = "Appointments";
}

<div id="PlaceHolderHere"></div>

<h2>Appointments</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Subject</th>
                <th scope="col">Date</th>
                <th scope="col">MeetingWith</th>
                <th scope="col">Reason</th>
                <th scope="col">Vanue</th>
                <th scope="col">IsVip</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Data)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Subject</td>
                    <td>@item.Date</td>
                    <td>@item.Meetingwith</td>
                    <td>@item.Reason</td>
                    <td>@item.vanue</td>
                    <td>@item.isVip</td>
                    <td><a class="btn btn-outline-primary" data-toggle="ajax-modal" data-target="#addAppointment" href="@Url.Action("Edit","Appointment",new {id= item.Id})">Edit</a></td>
                    <td><a class="btn btn-outline-danger" data-toggle="ajax-modal" data-target="#addAppointment" href="@Url.Action("Delete","Appointment",new {id= item.Id})">Delete</a></td>


                </tr>

            }
        </tbody>

    </table>
</div>

<a type="button" class="btn btn-outline-success" data-toggle="ajax-modal" data-target="#addAppointment"
        href="@Url.Action("Create")">
    Add Appointment
</a>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').trigger('focus')
        })
    </script>
}
